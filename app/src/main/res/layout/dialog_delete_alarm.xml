<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="2dp">

        <tran.nam.alarmtimer.widget.NTTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to delete this bell ?"
            android:padding="20dp"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:background="@color/baclground_splash"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:fontStyle="medium"
            app:fontSize="6"/>

        <tran.nam.alarmtimer.widget.NTButton
            android:id="@+id/bt_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="@android:color/white"
            android:text="Cancel"
            android:background="@android:color/black"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2.5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_delete"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:fontStyle="medium"
            app:fontSize="6"/>

        <tran.nam.alarmtimer.widget.NTButton
            android:id="@+id/bt_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="@android:color/white"
            android:text="Delete"
            android:layout_marginTop="5dp"
            android:layout_marginStart="2.5dp"
            android:background="#FB0012"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bt_cancel"
            app:fontStyle="medium"
            app:fontSize="6"/>

    </android.support.constraint.ConstraintLayout>

</layout>